@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = ViewBag.Error as string;
}

<h1 class="text-center mb-4">Login</h1>

@if (!string.IsNullOrEmpty(error)){
    <h4 class="alert-danger text-center">@error</h4>
}

<form action="Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
    <div class="form-group">
        <input type="text" name="email" placeholder="Email" class="form-control text-center" />
    </div>
    <div class="form-group">
        <input type="password" name="password" placeholder="Password" class="form-control text-center" />
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <button type="submit" value="Login" class="btn btn-outline-success col-md-3">Log in</button>
        <div class="col-md-2"></div>
        <a asp-action="" asp-controller="" class="btn btn-outline-danger text-danger col-md-3">Sign Up</a>
        <div class="col-md-2"></div>
    </div>
</form>
