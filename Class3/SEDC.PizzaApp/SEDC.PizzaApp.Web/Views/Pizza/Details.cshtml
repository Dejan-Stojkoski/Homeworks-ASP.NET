<h3 class="text-center">@ViewData["Title"]</h3>

<div class="row border border-dark">
    <div class="col-md-4 text-center border-right font-weight-bold border-dark">Name: </div>
    <div class="col-md-4 text-center border-right font-weight-bold border-dark">Size: </div>
    <div class="col-md-4 text-center font-weight-bold">Price: </div>
</div>

<div class="row border-bottom border-right border-left border-dark">
    <div class="col-md-4 text-center border-right border-dark">@ViewBag.Pizza.Id. @ViewBag.Pizza.Name</div>
    <div class="col-md-4 text-center border-right border-dark">@ViewBag.Pizza.PizzaSize</div>
    <div class="col-md-4 text-center">$@ViewBag.Pizza.Price</div>
</div>