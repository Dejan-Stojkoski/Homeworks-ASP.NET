@model ProductDetailsViewModel

<h3 class="text-center">@Model.Name</h3>

<div class="row text-center">
    <div class="col-md-4">
        <partial name="~/Views/Shared/Partial/_ProductCard.cshtml" for="@Model" />
    </div>

    <div class="col-md-8">
        <div class="card" style="height: 15rem;">
            <div class="card-body">
                <h4 class="card-title">Details:</h4>
                <p class="card-text" overflow:auto;">@Model.Description</p>
            </div>
        </div>
        <div class="text-center mt-1">
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success col-md-3">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger col-md-3">Delete</a>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark col-md-3">Back</a>
        </div>
    </div>
</div>
