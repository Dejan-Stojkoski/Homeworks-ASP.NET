@model List<ProductDetailsViewModel>

    <div class="row align-items-center">
        <h1 class="text-center mb-2 col-md-10">Products:</h1>
        <a asp-action="Create" asp-controller="Product" class="btn btn-outline-dark col-md-2">Add Product</a>
    </div>

<div class="row">
    @foreach (var item in Model)
     {
    <div class="col-md-4 text-center" style="height: 20rem;">
        <partial name="~/Views/Shared/Partial/_ProductCard.cshtml" for="@item" />
        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success col-md-4">Details</a>
        <a asp-controller="" asp-action="" asp-route-id="@item.Id" class="btn btn-danger col-md-4">Buy</a>
    </div>

     }
</div>
